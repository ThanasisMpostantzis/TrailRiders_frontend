{
  "expo": {
    "name": "Trail Riders ",
    "slug": "trailriders",
    "owner": "grgktvgr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./images/logo.webp",
    "scheme": "trailriders",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "splash": {
        "image": "./images/logo.webp",
        "resizeMode": "contain",
        "backgroundColor": "#DCDCDC"
      },
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.trailriders",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Η εφαρμογή χρειάζεται την τοποθεσία σας για να σας δείξει διαδρομές και αναβάτες κοντά σας.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Η εφαρμογή χρειάζεται την τοποθεσία σας για την καταγραφή διαδρομής."
      }
    },
    "splash": {
      "image": "./images/logo.webp",
      "resizeMode": "contain",
      "backgroundColor": "#DCDCDC"
    },
    "android": {
      "package": "com.yourname.trailriders",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "EXPO_PUBLIC_BASE_URL": "http://192.168.2.60:8000/auth",
      "EXPO_PUBLIC_URL": "http://192.168.2.60:8000/",
      "EXPO_PUBLIC_RIDES_URL": "http://192.168.2.60:8000/rides",
      "router": {},
      "eas": {
        "projectId": "05ab3ee0-02e7-49c9-bdc1-be653cc18ceb"
      }
    }
  }
}
